{
  "name": "api-travel-app",
  "version": "1.0.0",
  "private": true,
  "description": "api for travel-app",
  "main": "dist/index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "build": "tsc",
    "prestart": "npm run build",
    "watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "tslint": "tslint --project tsconfig.json",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:write"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/funfordima/api-travel-app.git"
  },
  "author": "Dima Litvinov <d.g.litvinov@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/funfordima/api-travel-app/issues"
  },
  "homepage": "https://github.com/funfordima/api-travel-app#readme",
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/mongodb": "^3.6.3",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.20",
    "@types/uuid": "^8.3.0",
    "husky": "^5.1.3",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.6",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.3",
    "uuid": "^8.3.2"
  },
  "dependencies": {
    "@types/mongodb": "^3.6.3",
    "@types/mongoose": "^5.10.3",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongodb": "^3.6.4",
    "mongoose": "^5.12.0",
    "morgan": "^1.10.0"
  },
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  }
}
